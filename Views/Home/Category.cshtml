@model IList<Category>;

<div class="col-sm-12">
    <div class="col-sm-12">
        <h4 class="text-danger">@ViewBag.err</h4>
    </div>
    <div class="col-sm-12">
        <a asp-controller="Home" asp-action="AddEditcategory">Add Category</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count > 0){
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <a asp-controller="Home" asp-action="AddEditcategory" asp-route-id="@category.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Deletecategory" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else{
                <tr><td colspan="2" class="text-center"> No data to show.</td></tr>
            }
           
            
        </tbody>
    </table>

</div>